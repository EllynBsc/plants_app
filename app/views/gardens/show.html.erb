

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
    <h1><%= link_to "add a plant", new_garden_plant_path(@garden), class: 'btn btn-primary'%></h1>

  </div>
</div>


<!-- div.container>div.row>div.col-4 -->
<div class="container">
  <div class="row">
    <% @garden.plants.each do |plant| %>
    <div class="col-4">
          <h2> <%= plant.name %></h2>
          <div class="card" background-image= url("<%= plant.image_url %>")>
          <%#= image_tag plant.image_url, width: 200 %>
          <%= link_to 'delete', plant_path(plant), method: :delete, data: {confirm: 'Are you sure???'}, class: 'btn btn-danger'%>
          </div>
        </div>
    <% end %>
  </div>

</div>




